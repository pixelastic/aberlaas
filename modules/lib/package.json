{
  "name": "aberlaas",
  "type": "module",
  "description": "Scaffold your JavaScript projects with tests, lint and release scripts",
  "version": "2.9.0",
  "repository": "pixelastic/aberlaas",
  "homepage": "https://projects.pixelastic.com/aberlaas/",
  "author": "Tim Carry (@pixelastic)",
  "license": "MIT",
  "files": [
    "bin/",
    "lib/commands/ci/*.js",
    "lib/commands/compress/*.js",
    "lib/commands/init/*.js",
    "lib/commands/lint/*.js",
    "lib/commands/lint/helpers/*.js",
    "lib/commands/precommit/*.js",
    "lib/commands/readme/*.js",
    "lib/commands/setup/*.js",
    "lib/commands/setup/helpers/*.js",
    "lib/commands/test/*.js",
    "lib/configs/",
    "lib/scripts/",
    "lib/templates/",
    "lib/*.js"
  ],
  "exports": {
    ".": "./lib/main.js",
    "./configs/eslint": "./lib/configs/eslint.js",
    "./configs/lintstaged": "./lib/configs/lintstaged.js",
    "./configs/prettier": "./lib/configs/prettier.js",
    "./configs/stylelint": "./lib/configs/stylelint.js",
    "./configs/vite": "./lib/configs/vite.js"
  },
  "main": "./lib/main.js",
  "bin": "bin/aberlaas.js",
  "dependencies": {
    "@eslint/js": "9.12.0",
    "@octokit/rest": "21.0.2",
    "@typescript-eslint/utils": "8.8.1",
    "@vitest/eslint-plugin": "1.1.7",
    "ci-info": "4.0.0",
    "dedent": "1.5.3",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.3.1",
    "eslint-plugin-n": "17.11.1",
    "eslint-plugin-prettier": "5.2.1",
    "find-up": "7.0.0",
    "firost": "4.0.1",
    "front-matter": "4.0.2",
    "gilmore": "1.0.0",
    "globals": "15.11.0",
    "golgoth": "2.4.0",
    "jest-extended": "4.0.2",
    "lint-staged": "15.2.10",
    "minimist": "1.2.8",
    "parse-github-repo-url": "1.4.1",
    "prettier": "3.3.3",
    "std-mocks": "2.0.0",
    "stylelint": "16.9.0",
    "typescript": "5.6.3",
    "vitest": "2.1.2",
    "yaml-lint": "1.7.0"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "build": "ABERLAAS_CWD=$INIT_CWD yarn g:build",
    "build:prod": "ABERLAAS_CWD=$INIT_CWD yarn g:build:prod",
    "cms": "ABERLAAS_CWD=$INIT_CWD yarn g:cms",
    "serve": "ABERLAAS_CWD=$INIT_CWD yarn g:serve",
    "release": "ABERLAAS_CWD=$INIT_CWD yarn g:release",
    "test": "ABERLAAS_CWD=$INIT_CWD yarn g:test",
    "test:watch": "ABERLAAS_CWD=$INIT_CWD yarn g:test:watch",
    "test:meta": "ABERLAAS_CWD=$INIT_CWD yarn g:test:meta",
    "compress": "ABERLAAS_CWD=$INIT_CWD yarn g:compress",
    "lint": "ABERLAAS_CWD=$INIT_CWD yarn g:lint",
    "lint:fix": "ABERLAAS_CWD=$INIT_CWD yarn g:lint:fix",
    "postinstall": "./scripts/postinstall"
  }
}
